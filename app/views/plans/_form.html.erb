<%= form_with(model: plan) do |form| %>
  <% if plan.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

      <ul>
        <% plan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :current_year %>
    <%= form.number_field :current_year %>
  </div>

  <div class="field">
    <%= form.label :current_semester %>
    <%= form.text_field :current_semester %>
  </div>

  <div class="field">
    <%= form.label :catalog_id %>
    <%= form.select :catalog_id, options_for_select(@catalogs.collect{ |cat| [cat.year, cat.id] }) %>
  </div>

  <div class="field">
    <%= form.label :major_id %>
    <%= form.select :major_id, options_for_select(@majors.collect{ |maj| [maj.name, maj.id] }) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
